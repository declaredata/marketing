{
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.7",
    "daisyui": "^4.12.10",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3",
    "simple-git-hooks": "^2.11.1",
    "stylelint": "^16.10.0",
    "stylelint-config-standard": "^36.0.1",
    "tailwindcss": "^3.4.7"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --cache --fix"
    ],
    "*.{html,css}": [
      "prettier --write --parser html"
    ],
    "*.json": [
      "prettier --write"
    ]
  },
  "scripts": {
    "precommit": "lint-staged --allow-empty"
  }
}
